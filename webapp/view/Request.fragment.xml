<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" 
xmlns:sf="sap.ui.layout.form" 	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable">
    <Dialog  title="Request" id="helloDialog" >
<IconTabBar
		id="idIconTabBarNoIcons"
		
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter text="Log" key="Log">
            <VBox alignItems="End">
		<Button  icon="sap-icon://decline" press="onClose" type="Reject"></Button>
            </VBox>
	
		
        <smartTable:SmartTable entitySet="REQUESTSet"
                         initiallyVisibleFields="Name,Rdate,Reason"
                         requestAtLeastFields="Name,Rdate,Reason"
			tableType="ResponsiveTable" useExportToExcel="true" beforeExport="onBeforeExport"
			useVariantManagement="false" useTablePersonalisation="true" header="Line Items"
			showRowCount="true" persistencyKey="SmartTableAnalytical_Explored" enableAutoBinding="true"
			demandPopin="true" class="sapUiResponsiveContentPadding"/>
            
			</IconTabFilter>
			<IconTabFilter text="Leave Request" key="Leave Request">
                  <sf:SimpleForm editable="true">
				<Label text=""></Label>
				<Input placeholder="Enter Emp Id" value="{Rqst>/RId}"  id="lid"></Input>
				<Label text=""></Label>
				<Input  placeholder="Enter Emp Name" value="{Rqst>/name}" id="lname"></Input>
                <Label text="" labelFor="lDP1"/>
		<DatePicker
			id="lDP1"
			placeholder="Enter Date"
			change="handleChange"
			class="sapUiSmallMarginBottom"  value="{Rqst>/RDate}"/>

            <Label text="" ></Label>
				<!-- <Label text="DateTimePicker with given Value and Formatter" labelFor="DTP2"/>
		<DateTimePicker
			id="DTP2"
			value="{Rqst>/RDate2}" valueFormat="yyyy-MM-dd-HH-mm-ss" displayFormat="long"
			change="handleChange"
			class="sapUiSmallMarginBottom"/>
				 -->
				<Label text=""></Label>
				<Input id="lReason" type="Text" placeholder="Enter Reason" value="{Rqst>/RLeave}"></Input>
				
				<Label></Label>
				<Button text="Submit" type="Emphasized" press="onLeave"></Button>
                 <Button text="close" icon="sap-icon://decline" press="onClose" type="Reject"></Button>
			</sf:SimpleForm>
				
			</IconTabFilter>
			<IconTabFilter text="Assets Request" key="Assets Request">

            <sf:SimpleForm>
            <Label text=""></Label>
            <Input id="InputId1" placeholder="Enter Your Id" value="{Asst>/AEid}"></Input>
            <Label text=""></Label>
            <Input id="InputName2" placeholder="Enter Your Name" value="{Asst>/AName}"></Input>
            <Label text="" ></Label>
            <Label text=""></Label>
            <DatePicker id="date3" value="{Asst>/ADate}" ></DatePicker>
            <Label text=""></Label>
				<Input id="InputAssets" type="Text" placeholder="Enter Assets" value="{Asst>/AAst}"></Input>
                <Label text=""></Label>
				<Input id="InputAssetsReason" type="Text" placeholder="Enter Reason" value="{Rqst>/AReason}"></Input>
                <Label></Label>
				<Button text="Submit" type="Emphasized" press="onAssets"></Button>
                 <Button text="close" icon="sap-icon://decline" press="onClose" type="Reject"></Button>

            </sf:SimpleForm>
            
				
			</IconTabFilter>
			
		</items>
	</IconTabBar>
	</Dialog>
</core:FragmentDefinition>