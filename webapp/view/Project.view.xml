<mvc:View controllerName="EA.EmployeeApp2.controller.Project" xmlns:sf="sap.ui.layout.form" 
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:core="sap.ui.core"
 xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">

		<App >
			<pages>
				<Page id="page" title="{i18n>project}" showHeader="false">
					<content>
                    <VBox class="sapUiSmallMargin">
		<sf:SimpleForm id="SimpleFormChange353"
			editable="true"
            visible="false"
			layout="ResponsiveGridLayout"
			title="Create New Project "
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<sf:content>
				<Label text=""/> 
				<Input id="Pid" value=""  placeholder="Enter Project ID"  />
                <Label text=""/> 
				<Input id="eid" value=""  placeholder="Enter Emp ID"  />
                <Label text=""/> 
				<Input id="name" value=""  placeholder="Enter Your Name"  />
                <Label text="" />
				<Input id="Pname" value=""  placeholder="Enter your Projectname"/>
                <Label text=""/>
				<Input id="pdetails" value="" placeholder="Projectdetails"/>
                <Label text=""/>
                
		<DatePicker
			id="PSDP"
			placeholder="Enter StartDate"
			change="handleChange"
			class="sapUiSmallMarginBottom" />
				
                <Label text=""/>
                <DatePicker
			id="PEDP"
			placeholder="Enter EndDate"
			change="handleChange"
			class="sapUiSmallMarginBottom"/>
				
				
				<Label text=""/>
				<Input id="pstatus" value="" placeholder="Status"/>
				
                <Label></Label>
				<Button text="Save" type="Emphasized" press="onCreate"></Button>
                 </sf:content>
		</sf:SimpleForm>
	</VBox>
            

            <smartTable:SmartTable id="SmartTable12" entitySet="PROJECTSet"
                          tableType="ResponsiveTable" 
                          
                        requestAtLeastFields="Pid,Eid,Name,Projectname,Projectdetails,Status,Startdate,Enddate"
                            useTablePersonalisation="true" 
                          header="EMPLOYEE DETAILS" showRowCount="true" 
                          persistencyKey="SmartTableAnalytical_Explored" 
                          enableAutoBinding="true" class="sapUiResponsiveContentPadding" >
                          	<smartTable:customToolbar>
			<OverflowToolbar design="Transparent">
				<ToolbarSpacer/>
				<!-- <OverflowToolbarButton text="Test"/> -->
				<OverflowToolbarButton icon="sap-icon://create" tooltip="Create" text="Create" press="onProjectOpen3"/>
				<OverflowToolbarButton icon="sap-icon://edit" tooltip="Edit" text="Edit" press="onEdit"/>
				<OverflowToolbarButton icon="sap-icon://delete" tooltip="Delete" text="Delete" press="onDelete"/>
				<!-- <OverflowToolbarButton icon="sap-icon://action-settings" tooltip="Column Settings" text="Column Settings" press="onColumns"/> -->
			</OverflowToolbar>
		</smartTable:customToolbar>

                          <!--  Table integration -->
    <Table mode="MultiSelect" growingThreshold="100" growing="true" id="idListItem"
     growingScrollToLoad="true">
        <columns>
        <Column  minScreenWidth="Small">
					<Label text="PID"></Label>
				</Column>
				<Column visible="false">
					<Label text="EID"></Label>
				</Column>
				<Column>
					<Label text="Name"></Label>
				</Column>
				<Column>
					<Label text="Projectname"></Label>
				</Column>
				<Column >
					<Label text="ProjectDetails"></Label>
				</Column>
				<Column>
					<Label text="StartDate"></Label>
				</Column>
                <Column width="8em">
					<Label text="EndDate"></Label>
				</Column>
				<Column>
					<Label text="Status"></Label>
				</Column>
        </columns>
        <items>
        <ColumnListItem>
					<cells>
						<Input value="{Pid}" editable="false"/>
						<Input value="{Eid}" editable="false"/>
						<Input value="{Name}" editable="false"/>
						<Input value="{Projectname}" editable="false"/>
                        <Input value="{Projectdetails}" editable="false"/>
						<Input value="{Startdate}" editable="false" />
                        <Input value="{Enddate}" editable="false" />
                        <Input value="{Status}" editable="false" />
						
					</cells>
				</ColumnListItem> 
        </items>
     </Table>
<!--  EndTable integration -->
                          </smartTable:SmartTable>
                    </content>
                    <footer>
			<OverflowToolbar id="otbFooter">
				<ToolbarSpacer />
				<Button text="Save" press="onSaveP" type="Emphasized" visible="false" id="saveid">
					<!-- <layoutData>
						<OverflowToolbarLayoutData
							moveToOverflow="false" />
					</layoutData> -->
				</Button>
			</OverflowToolbar>
		</footer>
				</Page>
			</pages>
		</App>
	
</mvc:View>
